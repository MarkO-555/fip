echo -n b1
echo /etc/rc:

umask 022
remount / rw

echo -n Setting /etc/mtab...
prtroot -i
/etc/rc.chk $?

# On first boot
if [ -e /etc/first ]; then
   echo First Boot
   /etc/rc.first
   rm /etc/first
fi

echo -n Mounting fstab...
mount -a
/etc/rc.chk $?

echo -n Clearing utmp...
> /var/run/utmp && chmod 0664 /var/run/utmp
/etc/rc.chk $?

echo b4
